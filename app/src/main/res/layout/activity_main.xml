<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <!-- Titre de la page -->
    <TextView
        android:id="@+id/signuptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Ecommerce App"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Image principale -->
    <ImageView
        android:id="@+id/onboardImage"
        android:layout_width="276dp"
        android:layout_height="215dp"
        android:layout_below="@id/signuptitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:contentDescription="Onboarding Image"
        android:src="@drawable/onboardscreen1" />

    <!-- Bouton de Login -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="20sp"
        android:layout_below="@id/onboardImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <!-- Bouton de Registration -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Registration"
        android:textSize="20sp" />

    <!-- Nouveau bouton pour la liste des utilisateurs -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/userListButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text=" Liste "
        android:textSize="20sp"
        android:layout_below="@id/signUpButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
</RelativeLayout>
